<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/editext_background"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:paddingLeft="4dp"
    android:paddingBottom="4dp"
    android:id="@+id/item_pager_layout"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/product_image"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1234"
                android:id="@+id/code"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1234"
                android:id="@+id/name"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1234"
                android:id="@+id/model"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1234"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/price"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:textColor="@color/white"
            android:text="מחיקה"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/delete_item"
            android:background="@drawable/full_background_orange"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:textColor="@color/white"
            android:text="הכפל מוצר"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/copy_item"
            android:background="@drawable/full_background_orange"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:textColor="@color/white"
            android:text="הוסף להזמנה"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/add_to_order"
            android:layout_marginRight="7dp"
            android:background="@drawable/full_background_orange"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:textColor="@color/white"
            android:text="פרטים נוספים"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/more_details"
            android:background="@drawable/full_background_orange"
            />
    </LinearLayout>


</LinearLayout>